{
  "name": "book-a-meal",
  "version": "1.0.0",
  "engines": {
    "node": "9.11.1"
  },
  "description": "Book-A-Meal is an application that allows customers to make food orders and helps the food",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch server -r esm server/src/bin/www.js",
    "start:babel": "nodemon --watch server --exec babel-node server/src/bin/www.js",
    "build": "babel server/src -d server/lib -s inline",
    "postbuild": "node server/lib/bin/www.js",
    "heroku-postbuild": "babel server/src -d server/lib && sequelize db:migrate",
    "test": "cross-env NODE_ENV=test nyc mocha server/test --t 5000 --exit --recursive -r esm",
    "test:babel": "nyc mocha server/test --exit --recursive -r babel-polyfill -r babel-register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report --reporter=text-lcov",
    "lint": "eslint server/src/*",
    "migrate": "cross-env NODE_ENV=test sequelize db:migrate",
    "drop": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "refresh": "npm run drop && npm run migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ozimos/Book-A-Meal.git"
  },
  "author": "Tovieye Moses Ozi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ozimos/Book-A-Meal/issues"
  },
  "homepage": "https://github.com/ozimos/Book-A-Meal#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "testdouble": "^3.7.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "date-fns": "^1.29.0",
    "dotenv": "^5.0.1",
    "esm": "^3.0.24",
    "express": "^4.16.3",
    "express-joi-validation": "^0.2.1",
    "joi": "^13.2.0",
    "jsonwebtoken": "^8.2.1",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.37.6",
    "sequelize-cli": "^4.0.0"
  }
}
